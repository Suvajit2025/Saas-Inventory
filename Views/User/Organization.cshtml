<body>

    <div class=" signup-wrapper scroll-wrapper">
            <h2 class="form-title">Create Organization</h2>
            <form asp-action="SaveOrganization" method="post">
                <div class="row g-3">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="input-group">
                            <div class="input-wrapper">
                                <i class="bi bi-building"></i>
                                <input type="text" id="OrganizationName" name="OrganizationName" placeholder="Organization Name" required />
                            </div>
                        </div>

                        <div class="input-group">
                            <div class="input-wrapper">
                                <i class="bi bi-card-text"></i>
                                <input type="text" id="GSTIN" name="GSTIN" placeholder="Input GSTIN No"  />
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="input-wrapper">
                                <i class="bi bi-card-text"></i>
                            <input type="text" id="Address" name="Address" placeholder="Input Full Address" />
                            </div>
                        </div>
                     

                        <div>
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" />
                        </div>

                        <div>
                            <label asp-for="ContactPerson" class="form-label"></label>
                            <input asp-for="ContactPerson" class="form-control" />
                        </div>

                        <div>
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div>
                            <label asp-for="BusinessTypeId" class="form-label">Business Type</label>
                            <select asp-for="BusinessTypeId" class="form-select">
                                <option value="">-- Select --</option>
                                <option value="1">Private Ltd</option>
                                <option value="2">Proprietorship</option>
                            </select>
                        </div>

                        <div>
                            <label asp-for="PAN" class="form-label"></label>
                            <input asp-for="PAN" class="form-control" />
                        </div>

                        <div>
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                        </div>

                        <div>
                            <label asp-for="PINCode" class="form-label"></label>
                            <input asp-for="PINCode" class="form-control" />
                        </div>

                        <div>
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        <i class="bi bi-check-circle me-2"></i>Save Organization
                    </button>
                </div>
            </form>
        </div> 

